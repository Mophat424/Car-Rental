{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "src", // Changed to project root
    "moduleResolution": "node",
    "outDir": "./dist", // Output will be relative to root
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"], // Keep both src and tests
  "exclude": ["node_modules"]
}